{
  "type": "custom.overlay",
  "name": "Overlay group",
  "sections": {
    "cart-drawer": {
      "type": "cart-drawer",
      "settings": {
        "show_cart_note": false,
        "show_shipping_text": false,
        "show_view_cart_button": true,
        "show_checkout_button": false,
        "show_price_in_checkout_button": false
      }
    },
    "newsletter-popup": {
      "type": "newsletter-popup",
      "settings": {
        "apparition_delay": 5,
        "show_only_on_index": true,
        "hide_for_account_holders": true,
        "show_only_once": true,
        "title": "メールマガジン",
        "content": "てとて、One Health Project のメールマガジン登録フォームです。新着情報やお得な情報を不定期で配信しています。",
        "button_text": "登録",
        "background": "#1c1c1c",
        "text_color": "#ffffff",
        "button_background": "#ffffff",
        "button_text_color": "#1c1c1c"
      }
    },
    "privacy-banner": {
      "type": "privacy-banner",
      "settings": {
        "title": "クッキーの利用について",
        "content": "<p>当サイトでは、お客様により適したサービスを提供するため、Cookieを使用しています。詳細については、当社の<a href=\"\/policies\/privacy-policy\" title=\"\/policies\/privacy-policy\">プライバシー ポリシー<\/a>を参照してください。<\/p>",
        "background": "#1c1c1c",
        "text_color": "#ffffff"
      }
    }
  },
  "order": [
    "cart-drawer",
    "newsletter-popup",
    "privacy-banner"
  ]
}
